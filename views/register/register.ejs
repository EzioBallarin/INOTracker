<%- include('../includes/header.ejs');%>
<h2>Register for INO Tracker</h2>
<p>We will never share your personal info with anyone.</p>
<form action="/register/new" method="post" id="inot_register">
    <label>Email address</label>
    <div class="form-group">
        <input type="email" name="inot_email" class="form-control" placeholder="Enter email"/>
    </div>
    <label>Full Name</label>
    <div class="form-group">
        <div class="row">
            <div class="col">
                <input type="text" name="inot_fname" class="form-control" placeholder="First name"/>
            </div>
            <div class="col">
                <input type="text" name="inot_lname" class="form-control" placeholder="Last name"/>
            </div>
        </div>
    </div>
    <label>Password</label>
    <div class="form-group">
        <input type="password" name="inot_pass" class="form-control"/>
        <small id="passwordHelpBlock"  class="form-text text-muted">
            Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
        </small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<%- include('../includes/footer.ejs');%>